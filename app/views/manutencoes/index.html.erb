<div class="row">
  <div class="col-md-12">
    <div class="panel">
      <div class="panel-heading">
        <div class="panel-title">
          <h4>Cadastro de Manutenções</h4>
            <a class="btn btn-floating btn-teal btn-light-green pull-right" href="<%=new_manutencao_path %>">
              <i class="ion-android-add"></i>
            </a>
        </div>
        
      </div><!--.panel-heading-->
      <div class="panel-body">
        <div class="unseen">
          <table class="table table-bordered table-striped table-condensed">
            <thead>
              <tr>
                <th>Veículo</th>
                <th>Descrição</th>
                <th>Odometro</th>
                <th>Data Manutenção</th>
                <th>Valor</th>
                <th style="width:120px">Ações</th>
            </thead>
            <tbody>
              <% @manutencoes.sort_by(&:manutencao_dt).reverse!.each do |manutencao| %>
                <tr align="center">
                  <td><%= Veiculo.find(manutencao.veiculo).nome %></td>
                  <td><%= manutencao.descricao %></td>
                  <td><%= manutencao.odometro %></td>
                  <td><%= manutencao.manutencao_dt %></td>
                  <td align="right">R$ <%= manutencao.valor %></td>
                  <td align="center">
                    <a href="<%= edit_manutencao_path(manutencao) %>" class="btn btn-default btn-ripple" title="Editar registro">
                      <span class="ion-edit">
                    </a>
                    <a class="btn btn-default btn-red btn-ripple" title="Remover registro" data-toggle="modal" data-target="#deleteModal_<%= manutencao.id %>">
                      <span class="ion-android-delete"></span>
                    </a>
                  </td>
                </tr>
                <div class="modal scale fade" id="deleteModal_<%= manutencao.id %>" tabindex="-1" role="dialog" aria-hidden="true">
                  <div class="modal-dialog">
                    <div class="modal-content">
                      <div class="modal-header">
                        <h4 class="modal-title">Karango WepApp</h4>
                      </div>
                      <div class="modal-body">
                        Deseja realmente excluir este registro?
                      </div>
                      <div class="modal-footer">
                        <button type="button" class="btn btn-flat btn-ripple" data-dismiss="modal">Não</button>
                        <%= button_to "Sim", manutencao, :method=>:delete, class: 'btn btn-flat btn-danger btn-ripple' %>
                      </div>
                    </div><!--.modal-content-->
                  </div><!--.modal-dialog-->
                </div><!--.modal-->
              <% end %>
            </tbody>
          </table>
        </div><!--.unseen-->
      </div><!--.panel-body-->
    </div><!--.panel-->
  </div><!--.col-md-12-->
</div>
<div class="login-screen">
    <div class="panel-login blur-content">
        <div class="panel-heading"><img src="/assets/images/teamfox.png" height="100" alt=""></div><!--.panel-heading-->
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div id="pane-login" class="panel-body active">
              <h2>Login Karango</h2>
              <div class="form-group">
                  <div class="inputer">
                      <div class="input-wrapper">
                          <%= f.email_field :email, autofocus: true, :placeholder => "Email", :class => "form-control camposlogin" %>
                      </div>
                  </div>
              </div><!--.form-group-->
              <div class="form-group">
                  <div class="inputer">
                      <div class="input-wrapper">
                          <%= f.password_field :password, autocomplete: "off", :placeholder => "Senha", :class => "form-control camposlogin" %>
                      </div>
                  </div>
                  <% if devise_mapping.rememberable? -%>
                    <div class="field">
                      <%= f.check_box :remember_me %>
                      <%= f.label :remember_me %>
                    </div>
                  <% end -%>
              </div><!--.form-group-->
              <div class="form-buttons clearfix">
                <%= f.submit "Login", :class => "btn btn-success pull-right" %>
              </div><!--.form-buttons-->

              <ul class="extra-links">
                  <li><a href="#" class="show-pane-forgot-password">Esqueceu a senha?</a></li>
                  <li><a href="#" class="show-pane-create-account">Criar uma nova conta</a></li>
              </ul>
          </div><!--#login.panel-body-->
        <% end %>
    </div><!--.blur-content-->
</div><!--.login-screen-->

<div class="row">
  <div class="col-md-12">
    <div class="panel">
      <div class="panel-heading">
        <div class="panel-title">
          <h4>Cadastro de Perfis de Usuários</h4>
            <a class="btn btn-floating btn-teal btn-light-green pull-right" href="<%=new_perfisusuario_path %>">
              <i class="ion-android-add"></i>
            </a>
        </div>
        
      </div><!--.panel-heading-->
      <div class="panel-body">
        <p id="notice"><%= notice %></p>
        <div class="unseen">
          <table class="table table-bordered table-striped table-condensed">
            <thead>
              <tr>
                <th>Código</th>
                <th>Nome</th>
                <th>Administrador</th>
                <th style="width:120px">Ações</th>
            </thead>
            <tbody>
              <% @perfisusuarios.each do |perfisusuario| %>
                <tr>
                  <td><%= perfisusuario.id %></td>
                  <td><%= perfisusuario.nome %></td>
                  <td align="center">
                    <% if perfisusuario.admin_flag %>
                    <div class="checkboxer">
                      <input type="checkbox" id="admin_<%= perfisusuario.id %>" checked disabled>
                      <label for="admin_<%= perfisusuario.id %>"></label>
                    </div>
                  <% else %>
                    <div class="checkboxer">
                      <input type="checkbox" id="admin_<%= perfisusuario.id %>" disabled>
                      <label for="admin_<%= perfisusuario.id %>"></label>
                    </div>
                  <% end %>
                </td>
  
                  <td align="center">
                    <a href="<%= edit_perfisusuario_path(perfisusuario) %>" class="btn btn-default btn-ripple" title="Editar registro">
                      <span class="ion-edit">
                    </a>
                    <a class="btn btn-default btn-red btn-ripple" title="Remover registro" data-toggle="modal" data-target="#deleteModal_<%= perfisusuario.id %>">
                      <span class="ion-android-delete"></span>
                    </a>
                  </td>
                </tr>
                <div class="modal scale fade" id="deleteModal_<%= perfisusuario.id %>" tabindex="-1" role="dialog" aria-hidden="true">
                  <div class="modal-dialog">
                    <div class="modal-content">
                      <div class="modal-header">
                        <h4 class="modal-title">Karango WepApp</h4>
                      </div>
                      <div class="modal-body">
                        Deseja realmente excluir este registro?
                      </div>
                      <div class="modal-footer">
                        <button type="button" class="btn btn-flat btn-ripple" data-dismiss="modal">Não</button>
                        <%= button_to "Sim", perfisusuario, :method=>:delete, class: 'btn btn-flat btn-danger btn-ripple' %>
                      </div>
                    </div><!--.modal-content-->
                  </div><!--.modal-dialog-->
                </div><!--.modal-->
              <% end %>
            </tbody>
          </table>
        </div><!--.unseen-->
      </div><!--.panel-body-->
    </div><!--.panel-->
  </div><!--.col-md-12-->
</div>

<%= form_for(imposto, :html => { :class => 'form-horizontal' }) do |f| %>
  <% if imposto.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(imposto.errors.count, "error") %> prohibited this imposto from being saved:</h2>

      <ul>
      <% imposto.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row example-row">
    <div class="col-md-3">Descrição:</div> 
      <div class="col-md-9">
        <div class="inputer">
            <div class="input-wrapper">
              <%= f.text_field :descricao, class: 'form-control' %>
            </div>
          </div>
      </div> 
  </div>

  <div class="row example-row">
    <div class="col-md-3">Valor:</div> 
      <div class="col-md-9">
        <div class="inputer">
            <div class="input-wrapper">
              <%= f.text_field :valor, class: 'form-control inputmask inputmask-decimal valid' %>
            </div>
          </div>
      </div> 
  </div>

  <div class="row example-row">
    <div class="col-md-3">Data Vencimento:</div> 
      <div class="col-md-9">
       <div class="control-group">
          <div class="controls">
            <div class="input-group">
            <span class="input-group-addon"><i class="ion-android-calendar"></i></span>
            <div class="inputer">
              <div class="input-wrapper">
              <%= f.text_field :vencimento_dt, class: 'form-control bootstrap-daterangepicker-basic valid active' %>
              </div>
            </div>
          </div>
        </div>
       </div>
      </div> 
  </div>

  <div class="row example-row">
    <div class="col-md-3">Observações:</div> 
      <div class="col-md-9">
        <div class="inputer">
            <div class="input-wrapper">
              <%= f.text_field :obs, class: 'form-control' %>
            </div>
          </div>
      </div> 
  </div>

  <div class="row example-row">
    <div class="col-md-3">Pago:</div> 
      <div class="col-md-9">
        <div class="switcher">
            <%= f.check_box :pago_flag, hidden: 'hidden' %>
            <label for="imposto_pago_flag"></label>
          </div>
      </div> 
  </div>

  <div class="row example-row">
    <div class="col-md-3">Forma de Pagamento:</div> 
      <div class="col-md-9">
        <%= f.collection_select(:formaspagamento_id, Formaspagamento.all, :id, :nome, {prompt: "Selecione"}, {class: 'selectpicker', "data-live-search" => "true"}) %>
      </div> 
  </div>

  <div class="row example-row">
    <div class="col-md-3">Veículo:</div> 
      <div class="col-md-9">
        <%= f.collection_select(:veiculo_id, Veiculo.where(usuario_id: current_usuario), :id, :nome, {prompt: "Selecione"}, {class: 'selectpicker', "data-live-search" => "true"}) %>
      </div> 
  </div>

  <div class="form-buttons">
    <div class="row">
      <div class="col-md-offset-3 col-md-9">
        <%= f.submit 'Salvar', :class => 'btn btn-blue btn-ripple' %>
        <input type="reset" value="Limpar Campos" class="btn btn-flat btn-danger btn-ripple">
        <a href="<%= impostos_path %>" class="btn btn-flat btn-ripple">Voltar</a>
      </div>
    </div>
  </div>
<% end %>

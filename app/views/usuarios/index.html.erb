<div class="row">
  <div class="col-md-12">
    <div class="panel">
      <div class="panel-heading">
        <div class="panel-title">
          <h4>Cadastro de Usuários</h4>
            <a class="btn btn-floating btn-teal btn-light-green pull-right" href="<%=new_usuario_path %>">
              <i class="ion-android-add"></i>
            </a>
        </div>
        
      </div><!--.panel-heading-->
      <div class="panel-body">
        <p id="notice"><%= notice %></p>
        <div class="unseen">
          <table class="table table-bordered table-striped table-condensed">
            <thead>
              <tr>
                <th>Código</th>
                <th>Nome</th>
                <th>Email</th>
                <th>Senha</th>
                <th>Cadastro dt</th>
                <th>Ativo flag</th>
                <th>Perfisusuario</th>
                <th style="width:120px">Ações</th>
            </thead>
            <tbody>
              <% @usuarios.each do |usuario| %>
                <tr>
                  <td><%= usuario.id %></td>
                  <td><%= usuario.nome %></td>
                  <td><%= usuario.email %></td>
                  <td><%= usuario.senha %></td>
                  <td><%= usuario.cadastro_dt %></td>
                  <td align="center">
                  <% if usuario.ativo_flag %>
                    <div class="checkboxer">
                      <input type="checkbox" id="ativo_flag_<%= usuario.id %>" checked disabled>
                      <label for="ativo_flag_<%= usuario.id %>"></label>
                    </div>
                  <% else %>
                    <div class="checkboxer">
                      <input type="checkbox" id="ativo_flag_<%= usuario.id %>" disabled>
                      <label for="ativo_flag_<%= usuario.id %>"></label>
                    </div>
                  <% end %>
                  </td>
                  <td><%= usuario.perfisusuario %></td>
                  
                  <td align="center">
                    <a href="<%= edit_usuario_path(usuario) %>" class="btn btn-default btn-ripple">
                      <span class="ion-edit">
                    </a>
                    <a class="btn btn-default btn-red btn-ripple" title="Remover registro">
                      <span class="ion-android-delete"></span>
                    </a>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div><!--.unseen-->
      </div><!--.panel-body-->
    </div><!--.panel-->
  </div><!--.col-md-12-->
</div>
<%= form_for(veiculo, :html => { :class => 'form-horizontal' }) do |f| %>
  <% if veiculo.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(veiculo.errors.count, "error") %> prohibited this veiculo from being saved:</h2>

      <ul>
      <% veiculo.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row example-row">
    <div class="col-md-3">Nome:</div> 
      <div class="col-md-9">
        <div class="inputer">
            <div class="input-wrapper">
              <%= f.text_field :nome, class: 'form-control' %>
            </div>
          </div>
      </div> 
  </div>

  <div class="row example-row">
    <div class="col-md-3">Placa:</div> 
      <div class="col-md-9">
        <div class="inputer">
            <div class="input-wrapper">
              <%= f.text_field :placa, class: 'form-control' %>
            </div>
          </div>
      </div> 
  </div>

  <div class="row example-row">
    <div class="col-md-3">Usuário:</div> 
      <div class="col-md-9">
        <%= f.collection_select(:usuario_id, Usuario.all, :id, :email, {prompt: "Selecione"}, {class: 'selectpicker'}) %>
      </div> 
  </div>

  <div class="row example-row">
    <div class="col-md-3">Marca:</div> 
      <div class="col-md-9">
        <%= f.collection_select(:marca_id, Marca.all, :id, :nome, {prompt: "Selecione"}, {class: 'selectpicker'}) %>
      </div> 
  </div>

  <div class="row example-row">
    <div class="col-md-3">Tipo do Veículo:</div> 
      <div class="col-md-9">
        <%= f.collection_select(:tiposveiculo_id, Tiposveiculo.all, :id, :nome, {prompt: "Selecione"}, {class: 'selectpicker'}) %>
      </div> 
  </div>

  <div class="form-buttons">
    <div class="row">
      <div class="col-md-offset-3 col-md-9">
        <%= f.submit 'Salvar', :class => 'btn btn-blue btn-ripple' %>
        <input type="reset" value="Limpar Campos" class="btn btn-flat btn-danger btn-ripple">
        <a href="<%= veiculos_path %>" class="btn btn-flat btn-ripple">Voltar</a>
      </div>
    </div>
  </div>
<% end %>

<div class="row">
  <div class="col-md-12">
    <div class="panel">
      <div class="panel-heading">
        <div class="panel-title">
          <h4>Cadastro de Despesas</h4>
            <a class="btn btn-floating btn-teal btn-light-green pull-right" href="<%=new_despesa_path %>">
              <i class="ion-android-add"></i>
            </a>
        </div>
        
      </div><!--.panel-heading-->
      <div class="panel-body">
        <p id="notice"><%= notice %></p>
        <div class="unseen">
          <table class="table table-bordered table-striped table-condensed">
            <thead>
              <tr>
                <th>Descricao</th>
                <th>Despesa dt</th>
                <th>Valor</th>
                <th>Veiculo</th>
                <th style="width:120px">Ações</th>
            </thead>
            <tbody>
              <% @despesas.each do |despesa| %>
                <tr>
                  <td><%= despesa.descricao %></td>
                  <td><%= despesa.despesa_dt %></td>
                  <td><%= despesa.valor %></td>
                  <td><%= Veiculo.find(despesa.veiculo).nome %></td>
                  
                  <td align="center">
                    <a href="<%= edit_despesa_path(despesa) %>" class="btn btn-default btn-ripple">
                      <span class="ion-edit">
                    </a>
                    <a class="btn btn-default btn-red btn-ripple" title="Remover registro">
                      <span class="ion-android-delete"></span>
                    </a>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div><!--.unseen-->
      </div><!--.panel-body-->
    </div><!--.panel-->
  </div><!--.col-md-12-->
</div>

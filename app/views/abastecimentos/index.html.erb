<div class="row">
  <div class="col-md-12">
    <div class="panel">
      <div class="panel-heading">
        <div class="panel-title">
          <h4>Cadastro de Abastecimentos</h4>
            <a class="btn btn-floating btn-teal btn-light-green pull-right" href="<%=new_abastecimento_path %>">
              <i class="ion-android-add"></i>
            </a>
        </div>
        
      </div><!--.panel-heading-->
      <div class="panel-body">
        <p id="notice"><%= notice %></p>
        <div class="unseen">
          <table class="table table-bordered table-striped table-condensed">
            <thead>
              <tr>
                <th>Abastecimento dt</th>
                <th>Odometro</th>
                <th>Precolitro</th>
                <th>Precototal</th>
                <th>Veiculo</th>
                <th>Completou flag</th>
                <th>Combustivel</th>
                <th style="width:120px">Ações</th>
            </thead>
            <tbody>
              <% @abastecimentos.each do |abastecimento| %>
                <tr>
                  <td><%= abastecimento.abastecimento_dt %></td>
                  <td><%= abastecimento.odometro %></td>
                  <td><%= abastecimento.precolitro %></td>
                  <td><%= abastecimento.precototal %></td>
                  <td><%= Veiculo.find(abastecimento.veiculo).nome %></td>
                  <td align="center">
                    <% if abastecimento.completou_flag %>
                      <div class="checkboxer">
                        <input type="checkbox" id="completou_<%= abastecimento.id %>" checked disabled>
                        <label for="completou_<%= abastecimento.id %>"></label>
                      </div>
                    <% else %>
                      <div class="checkboxer">
                        <input type="checkbox" id="completou_<%= abastecimento.id %>" disabled>
                        <label for="completou_<%= abastecimento.id %>"></label>
                      </div>
                    <% end %>
                  </td>
                  <td><%= Combustivel.find(abastecimento.combustivel).nome %></td>
                  
                  <td align="center">
                    <a href="<%= edit_abastecimento_path(abastecimento) %>" class="btn btn-default btn-ripple">
                      <span class="ion-edit">
                    </a>
                    <a class="btn btn-default btn-red btn-ripple" title="Remover registro">
                      <span class="ion-android-delete"></span>
                    </a>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div><!--.unseen-->
      </div><!--.panel-body-->
    </div><!--.panel-->
  </div><!--.col-md-12-->
</div>
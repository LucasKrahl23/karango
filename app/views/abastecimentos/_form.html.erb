<%= form_for(abastecimento, :html => { :class => 'form-horizontal' }) do |f| %>
  <% if abastecimento.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(abastecimento.errors.count, "error") %> prohibited this abastecimento from being saved:</h2>

      <ul>
      <% abastecimento.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row example-row">
    <div class="col-md-3">Data Abastecimento:</div> 
      <div class="col-md-9">
       <div class="control-group">
          <div class="controls">
            <div class="input-group">
            <span class="input-group-addon"><i class="ion-android-calendar"></i></span>
            <div class="inputer">
              <div class="input-wrapper">
              <%= f.text_field :abastecimento_dt, class: 'form-control bootstrap-daterangepicker-basic valid active' %>
              </div>
            </div>
          </div>
        </div>
       </div>
      </div> 
  </div>

  <div class="row example-row">
    <div class="col-md-3">Odometro:</div> 
      <div class="col-md-9">
        <div class="inputer">
            <div class="input-wrapper">
              <%= f.number_field :odometro, class: 'form-control payment-restrict valid' %>
            </div>
          </div>
      </div> 
  </div>

  <div class="row example-row">
    <div class="col-md-3">Preço Litro:</div> 
      <div class="col-md-9">
        <div class="inputer">
            <div class="input-wrapper">
              <%= f.text_field :precolitro, class: 'form-control inputmask inputmask-decimal valid' %>
            </div>
          </div>
      </div> 
  </div>
  
  <div class="row example-row">
    <div class="col-md-3">Preço Total:</div> 
      <div class="col-md-9">
        <div class="inputer">
            <div class="input-wrapper">
              <%= f.text_field :precototal, class: 'form-control inputmask inputmask-decimal valid' %>
            </div>
          </div>
      </div> 
  </div>

  <div class="row example-row">
    <div class="col-md-3">Observações:</div> 
      <div class="col-md-9">
        <div class="inputer">
            <div class="input-wrapper">
              <%= f.text_field :obs, class: 'form-control' %>
            </div>
          </div>
      </div> 
  </div>

  <div class="row example-row">
    <div class="col-md-3">Veículo:</div> 
      <div class="col-md-9">
        <%= f.collection_select(:veiculo_id, Veiculo.all, :id, :nome, {prompt: "Selecione"}, {class: 'selectpicker'}) %>
      </div> 
  </div>

  <div class="row example-row">
    <div class="col-md-3">Completou:</div> 
      <div class="col-md-9">
        <div class="switcher">
            <%= f.check_box :completou_flag, hidden: 'hidden' %>
            <label for="abastecimento_completou_flag"></label>
          </div>
      </div> 
  </div>

  <div class="row example-row">
    <div class="col-md-3">Combustível:</div> 
      <div class="col-md-9">
        <%= f.collection_select(:combustivel_id, Combustivel.all, :id, :nome, {prompt: "Selecione"}, {class: 'selectpicker'}) %>
      </div> 
  </div>

  <div class="row example-row">
    <div class="col-md-3">Forma de Pagamento:</div> 
      <div class="col-md-9">
        <%= f.collection_select(:formaspagamento_id, Formaspagamento.all, :id, :nome, {prompt: "Selecione"}, {class: 'selectpicker'}) %>
      </div> 
  </div>

  <div class="form-buttons">
    <div class="row">
      <div class="col-md-offset-3 col-md-9">
        <%= f.submit 'Salvar', :class => 'btn btn-blue btn-ripple' %>
        <input type="reset" value="Limpar Campos" class="btn btn-flat btn-danger btn-ripple">
        <a href="<%= abastecimentos_path %>" class="btn btn-flat btn-ripple">Voltar</a>
      </div>
    </div>
  </div>
<% end %>
